/* 喜地推荐 */
.xidi-selected{
    text-align: center;
    font-size: 15px;
    margin: 40px 0 10px;
}

.xidi-selected text:before{
    content: '.';
    display: inline-block;
    width: 25px;
    height: 1px;
    background-color: #d8d8d8;
    margin-right: 10px;
    overflow: hidden;
    vertical-align: middle;
}

.xidi-selected text:after{
    content: '.';
    display: inline-block;
    width: 25px;
    height: 1px;
    background-color: #d8d8d8;
    margin-left: 10px;
    overflow: hidden;
    vertical-align: middle;
}

/* 悬浮加入购物车 */
.floatCart{
    position: fixed;
    bottom:0;
    width: 100%;
    display: flex;
    flex-direction: row;
    z-index: 11;
}

.viewCart{
    display: inline-flex;
    flex: 0.52;
}

.viewCart navigator{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-top: 1px solid #dddddd;
    background: #ffffff url(/image/icon-cart.png) 50% 50% no-repeat;
    background-size: 28px 24px;
    position: relative;
}

.viewCart view{
    position: absolute;
    background: #4dd5d1;
    color: #ffffff;
    border-radius: 9px;
    border-bottom-right-radius: 0;
    padding: 0 5px;
    right: 50%;
    margin-right: 5px;
    margin-top: 5px;
}

.addToCart{
    flex: 1;
}

.addToCart button{
    border-radius: 0;
    border: none;
    background-color: #4ed6d2;
    color: #ffffff;
    font-style: 17px;
    height: 50px;
    line-height: 50px;
}

.addToCart button:after{
    border-radius: 0;
    border: none;
}

.addToCart button[disabled] {
    background: #c5c5c5;
    color: #ffffff;
}