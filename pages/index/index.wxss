/**index.wxss**/
.container{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 30rpx;
}

image{
  width:100%;
}

.banner image{
  display: block;
  height: 397.8rpx;
}
.selected-list{
  background-color: #fff;
}
.basic-info{
  position: relative;
  padding:0 15px;
}

.basic-info text{
  display: block;
}

.basic-info .main-title{
  padding-top: 22px;
  font-size: 15px;
  line-height: 22px;
  height: 44px;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
  color: #222;
}

.basic-info .national-flag{
  width:21px; 
  height:13px;
  margin-right:5px;
}
.basic-info .sub-title{
  display: inline-block;
  font-size: 13px;
  margin: 9px 0 8px;
}

.basic-info .price{
  font-size: 21px;
  color:#56cdcb;
}
.basic-info .warn-stock{
  padding: 0 10px;
  position: absolute;
  bottom: 0;
  right: 15px;
  height: 22px;
  color: #fff;
  border: 0;
  line-height: 22px;
  background-color: #ff7765;
  font-size: 12px;
}
.basic-info .warn-stock i{
  margin: 0 3px;
  font-style: normal;
  font-size: 13px;
}
.other-price{
  font-size:12px;
  color: #777;
  padding:5rpx 0;
}

.other-price text{
  display: inline;
  text-decoration: line-through;
}
.swiper{
  margin: 0 0 10px;
  width: 100%;
  padding: 16px 15px 30px;
  box-sizing: border-box;
  border-bottom: 1px solid #c5c5c5;
  background-color: #fff;
}
.swiper swiper{
  height: 100%;
}
.scroll-view-item{
  position: relative;
  padding-bottom: 100%;
  margin-bottom: 10px;
  height: 0;
}
.scroll-view-item-inner{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.swiper text{
  display: inline-block;
  width: 100%;
  height: 33px;
  min-height: 33px;
  text-align: left;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}
.special-banner{
  padding: 0 15px;
  box-sizing: border-box;
  background-color: #fff;
}