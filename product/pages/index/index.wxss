/**index.wxss**/

.container {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.banner image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.selected-list {
  background-color: #fff;
}

.basic-info {
  position: relative;
  padding: 51rpx 35.1rpx 0;
  background-color: #fff;
}

.basic-info .main-title {
  margin-bottom: 23.4rpx;
  font-size: 15px;
  line-height: 52rpx;
  font-weight: bold;
  color: #222;
  /*letter-spacing:7rpx;*/
}

.pro-name {
  margin: 25rpx 0 27rpx;
  display: flex;
  height: 35.1rpx;
  line-height: 35.1rpx;
}

.pro-name .national-flag {
  width: 50rpx;
  height: 31rpx;
  margin-right: 11.7rpx;
}

.pro-name .sub-title {
  width: 616rpx;
  font-size: 13px;
  color: #222;
  white-space: nowrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
}

.basic-info .price {
  display: inline-block;
  margin-bottom: 5rpx;
  font-size: 21px;
  color: #00bebf;
}

.other-price {
  color: #777;
  display: flex;
}

.other-name {
  font-size: 12px;
}

.line-thro {
  font-size: 13px;
  text-decoration: line-through;
}

.warn-stock {
  display: flex;
  padding: 0 10px;
  position: absolute;
  bottom: 0;
  right: 36rpx;
  height: 51.48rpx;
  color: #fff;
  line-height: 51.48rpx;
  background-color: #ff7765;
  font-size: 12px;
  border-radius: 4px;
}

.warn-stock text {
  margin: 0 7.02rpx;
  font-size: 13px;
}

swiper {
  width: 100%;
  height: 100%;
}

.swiper {
  padding: 37.44rpx 35.1rpx 67.5rpx;
  background-color: #fff;
  border-bottom: 1px solid #c5c5c5;
  position: relative;
}

.swiper-item {
  width: 682.6rpx;
  height: 807.3rpx;
  overflow: hidden;
  display: flex;
}

.session-inner {
  width: 682.6rpx;
  height: 682.6rpx;
  border-radius: 7px;
  background-color: red;
}

.session-inner image {
  width: 100%;
  height: 100%;
}

.topic-word {
  margin: 17rpx 0 28.08rpx;
  padding: 0 12rpx;
  font-size: 12px;
  line-height: 18px;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  -webkit-line-clamp: 2;
}

.swiper-dots {
  position: absolute;
  bottom: 39.4rpx;
  width: 100%;
  text-align: center;
  left: 0;
  z-index: 88;
}

.swiper-dots view {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #c5c5c5;
  display: inline-block;
  margin-right: 24rpx;
}

.swiper-dots view:last-child {
  margin-right: 0;
}

.swiper-dots .current {
  background-color: #4ed6d1;
}

.special-banner {
  width: 100%;
  height: 363rpx;
  background-color: #fff;
}

.special-banner image {
  width: 100%;
  height: 100%;
}

.img-cover {
  width: 100%;
  height: 363rpx;
}

.re-pro {
  margin-bottom: 24rpx;
}

.re-pro:last-child {
  margin-bottom: 0;
}
