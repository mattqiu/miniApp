.settlement-bar {
  width: 100%;
  height: 114.66rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 111;
  display: flex;
  background: #fff;
}

.settlement-bar .settlement-left {
  flex-grow: 1;
  border-top: 1px solid #d9d9d9;
  display: flex;
}

.settlement-bar .checkbox-widget {
  width: 154.44rpx;
  height: 100%;
  position: relative;
  padding-left: 23.4rpx;
  display: flex;
  align-items: center;
}

.settlement-bar .checkbox-widget .xd {
  font-size: 46.8rpx;
}

.settlement-bar .checkbox-widget .xd-checked {
  color: #4ed6d1;
  vertical-align: text-bottom;
}

.settlement-bar .checkbox-widget .checkbox {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.settlement-bar .checkbox-widget .checkbox-word {
  font-size: 30.42rpx;
  color: #888;
  margin-left: 15rpx;
}

.settlement-bar .settlement-total {
  flex-grow: 1;
  text-align: right;
  padding: 16.38rpx 23.4rpx 0 0;
}

.settlement-bar .settlement-money {
  vertical-align: text-bottom;
  line-height: 1.1;
}

.settlement-bar .settlement-money-number {
  font-size: 37.44rpx;
  color: #00bebf;
  font-weight: bold;
}

.settlement-bar .settlement-freight {
  font-size: 23.4rpx;
  color: #777;
}

.settlement-bar .settlement-btn {
  width: 257.4rpx;
  line-height: 114.66rpx;
  background: #4ed6d1;
  color: #fff;
  font-size: 35.1rpx;
  text-align: center;
}

.settlement-bar .settlement-btn.disabled{
  background: #c5c5c5;
}

.settlement-bar .settlement-number {
  font-size: 32.76rpx;
}
