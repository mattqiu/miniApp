.goods-list {
  margin-bottom: 23.4rpx;
}

.goods-item {
  display: flex;
  position: relative;
  padding-top: 28.08rpx;
  background-color: #fff;
  color: #777;
}

.goods-item:last-child:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 1px;
  background: #d9d9d9;
}

.goods-item .invalid-title {
  width: 93.6rpx;
  padding-left: 23.4rpx;
  line-height: 154.44rpx;
}

.goods-item-detail {
  flex-grow: 1;
  display: flex;
  padding: 0 23.4rpx 28.08rpx 0;
  border-bottom: 1px solid #d9d9d9;
  width: 470.34rpx;
}

.goods-item-image {
  width: 154.44rpx;
  height: 154.44rpx;
  margin-right: 23.4rpx;
}

.goods-item-image image {
  width: 100%;
  height: 100%;
  opacity: .6;
}

.goods-item-info {
  width: 453.96rpx;
}

.goods-item-info-row {
  display: flex;
}

.goods-item-info-row.third {
  margin-top: 12.87rpx;
}

.goods-item-attr-box {
  width: 292.5rpx;
  height: 39.78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-item-title {
  width: 292.5rpx;
  font-size: 28.08rpx;
  line-height: 39.78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods-item-price {
  flex-grow: 1;
  text-align: right;
  font-size: 30.42rpx;
}

.goods-item-info-attr {
  margin-right: 18.72rpx;
  line-height: 39.78rpx;
  font-size: 23.4rpx;
}

.goods-item-info-attr:last-child {
  margin-right: 0;
}

.goods-item-num-box {
  flex-grow: 1;
  display: flex;
}

.goods-item-num {
  display: flex;
  width: 180.18rpx;
  margin-right: 11.7rpx;
  height: 56.16rpx;
}

.goods-item-num-input, .goods-item-num-reduce, .goods-item-num-add {
  height: 53.82rpx;
  line-height: 53.82rpx;
  text-align: center;
}

.goods-item-num-reduce, .goods-item-num-add {
  width: 53.82rpx;
  font-size: 18.72rpx;
  color: #888;
  border: 1px solid #c5c5c5;
}

.goods-item-num-reduce.disabled, .goods-item-num-add.disabled {
  color: #ddd;
  border-color: #ddd;
}

.goods-item-num-input {
  width: 67.86rpx;
  border: 1px solid #ddd;
  border-left: 0;
  border-right: 0;
  font-size: 28.08rpx;
}

.goods-item-num-tips {
  flex-grow: 1;
  font-size: 28.08rpx;
  line-height: 53.82rpx;
}

.goods-item-delete {
  width: 35.01rpx;
  font-size: 35.1rpx;
  line-height: 56.16rpx;
  color: #c8c8c8;
}
