.address {
  padding: 1px;
  background-color: #fff;
}

.address-list {
  padding: 0 23.4rpx;
}

.list-box {
  margin-top: 23.4rpx;
  padding: 23.4rpx 0 28.08rpx 0;
  border: 2.34rpx solid #ddd;
  display: flex;
}

.list-box:first-child {
  margin-top: 35rpx;
}

.list-box.active {
  border: 2.34rpx solid #4ed7d0;
}

.list-cont {
  padding: 0 35.1rpx 0 0;
    flex-grow: 1;
  width: 498.42rpx;
  border-right: 2rpx solid #ddd;
}

.cont-contact {
  padding: 9.36rpx 0 7.02rpx;
  position: relative;
}

.cont-ad, .cont-ad-desic {
  font-size: 12px;
  color: #777;
  line-height: 43rpx;
  -webkit-line-clamp: 2;
}

.list-edit {
  display: flex;
  width: 102.96rpx;
  align-items: center;
  justify-content: center;
}

.xd-edit {
  font-size: 30rpx;
  color: #9b9b9b;
}

.cont-contact .name, .cont-contact .mobile {
  margin-right: 23.4rpx;
}

.cont-contact .name {
  font-size: 15px;
  color: #222;
}

.cont-contact .mobile {
  font-size: 14px;
  color: #222;
}

.cont-contact .default {
  position: absolute;
  right: 0;
  top: 9.36rpx;
  width: 70.2rpx;
  height: 35.1rpx;
  background-color: #4ed7d0;
  border-radius: 3px;
  text-align: center;
  line-height: 35.1rpx;
  color: #fff;
  font-size: 11px;
}

.cont-contact .cont-ad-desic {
  font-size: 12px;
  color: #777;
  line-height: 36px;
}

.addAddress-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 111.15rpx;
  background-color: #4ed6d2;
  color: #fff;
  font-size: 18px;
  line-height: 111.15rpx;
  text-align: center;
}


.item-left{
    display: flex;
    align-items: center;
    margin: 0 24.57rpx;
}

.item-left-radio{
    position: relative;
    width: 46.8rpx;
    height: 46.8rpx;
}
.item-left-radio .xd-circle{
    position: absolute;
    top: 5px;
    left: -2px;
    font-size: 30rpx;
    color: #ddd;
}

.item-left-radio .xd-dot{
    position: absolute;
    top: 5px;
    left: -1px;
    font-size: 26rpx;
    color: #4ed6d1;
}