.address-box {
  height: 198.9rpx;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 2rpx solid #ddd; 
}

.address-box .colors-border {
  width: 100%;
  height: 8.19rpx;
}

.address-box .address-info{
  width: 696.15rpx;
  padding: 0 70.2rpx 0 46.8rpx;
}

.address-box .first-row{
  height: 67.86rpx;
  line-height: 67.86rpx;
  display: flex;
  align-items: center;
}

.address-box .default-icon{
  font-size: 28.08rpx;
  background: #4ed6d1;
  color: #fff;
  border-radius: 9.36rpx;
  width: 70.2rpx;
  height: 35.1rpx;
  line-height: 35.1rpx;
  text-align: center;
}
.address-box .contact{
  font-size: 14px;
  color: #222;
  margin: 0 23.4rpx 0 28.08rpx;
}

.address-box .name{
  font-size: 15px;
  color: #222;
}

.address-box .city,
.address-box .street{
  font-size: 12px;
  color: #777;
  line-height: 42.12rpx;
}

.address-box-right{
  display: flex;
  align-items: center;
  font-size: 30.42rpx;
  color: #c5c5c5;
}

.address-box .tips{
  flex-grow: 1;
  height: 189.54rpx;
  line-height: 189.54rpx;
  padding-left: 35.1rpx;
  font-size: 15px;
  color: #222;
}