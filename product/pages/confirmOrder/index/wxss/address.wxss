.address-box {
  height: 198.9rpx;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 2rpx solid #ddd; 
}

.address-box .colors-border {
  width: 100%;
  height: 4px;
  background-size: cover;
  background: repeat-x 0 0 url('data:image/png;base64,');
}

.address-box .address-info{
  width: 696.15rpx;
  padding: 0 70.2rpx 0 46.8rpx;
}

.address-box .first-row{
  height: 67.86rpx;
  line-height: 67.86rpx;
  display: flex;
  align-items: center;
}

.address-box .default-icon{
  display: inline-block;
  font-size: 11px;
  background: #4ed6d1;
  color: #fff;
  border-radius: 3px;
  line-height: 1;  
  padding: 4px 2px;
}
.address-box .contact{
  font-size: 14px;
  color: #222;
  margin: 0 23.4rpx 0 28.08rpx;
}

.address-box .name{
  font-size: 15px;
  color: #222;
}

.address-box .city,
.address-box .street{
  font-size: 12px;
  color: #777;
  line-height: 42.12rpx;
}

.address-box-right{
  display: flex;
  align-items: center;
  margin-right: 35.1rpx;
  font-size: 30.42rpx;
  color: #c5c5c5;
}

.address-box .tips{
  flex-grow: 1;
  height: 189.54rpx;
  line-height: 189.54rpx;
  padding-left: 35.1rpx;
  font-size: 15px;
  color: #222;
}