
.container{
    padding-top: 1px;
    font-size: 12px;
    line-height: 1.5;
    color: #222222;
    font-family: Arial, Helvetica, sans-serif;
}

.container:before{
    content: '.';
    height: 1px;
    line-height: 0;
    overflow: hidden;
    background: red;
    display: block;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 8888;
}

.icon-flag{
    width: 30px;
    height: 20px;
}

.price{
    color: #00bebe;
}

.local-price{
    color: #a8a8a8;
}

.local-price text{
    text-decoration: line-through;
}

/* 推荐产品列表 */
.goods-selected:after{
    content: '';
    display: block;
    height: 0;
    overflow: hidden;
    visibility: hidden;
    clear: both;
}

.item{
    width: 50%;
    padding: 10px 10px 19px;
    box-sizing: border-box;
    border: 1px solid #f3f3f3;
    border-left:none;
    float: left;
    margin-top:-1px;
}

.item:nth-child(even){
    border-right-color: #ffffff;
}

.item .name{
    display: block;
    margin: 5px 0 3px;
    height: 36px;
    overflow: hidden;
}

.item .img{
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 100%;
}

.item image{
    position: absolute;
    width: 100%;
    height: 100%;
}

.item .price{
    display: block;
    font-size: 14px;
    padding-bottom: 6px;
    font-weight: bold;
}
